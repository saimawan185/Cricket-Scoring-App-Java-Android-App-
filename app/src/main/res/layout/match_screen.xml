<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchScreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Match Screen"
        app:titleTextColor="@android:color/white"
        android:navigationIcon="@drawable/back_button" >

        <ImageView
            android:id="@+id/muteUnmuteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/unmute"
            android:contentDescription="Mute/Unmute Icon"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/targetScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target: 0"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batsman"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runs"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/player1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saim"
                    android:checked="true"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/player1Runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/player2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilal"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

                <TextView
                    android:id="@+id/player2Runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18dp" />
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baller"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ballerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Bilal"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ballerOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.4 (4) - 0"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runs"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wickets"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overs"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/wickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/overs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.4"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"

                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/noBall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="No Ball"
                android:textSize="17dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/zero"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/wicket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Wicket"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <Button
                android:id="@+id/wide"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Wide"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_background"/>
            <Button
                android:id="@+id/bies"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bies"
                android:textSize="18dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/button_background"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>